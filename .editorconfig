# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 4

# JavaScript files
[*.js]
indent_size = 4

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package.json
[package.json]
indent_size = 2
